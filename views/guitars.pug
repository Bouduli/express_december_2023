extends template.pug 

block content 
    if guitars 
        div(class="guitarContainer")
            each guitar in guitars
                div(class="guitar" id=guitar.id)
                    h3=guitar.title 
                    if(guitar.files)
                        .imgContainer
                            each file in guitar.files
                                div
                                    img(src=file, alt="File for this guitar")
                    if user 
                        if guitar.user.email == user.email
                            a(href="/guitars/"+guitar.id data-type="delete") delete